<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".input.PhotoFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvProfilePicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/WhiteBoldText"
        android:text="Upload Profile Picture"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_marginTop="30dp"
        />

    <!-- Upload Image-->
    <RelativeLayout
        android:id="@+id/uploadPhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_upload_image"
        app:layout_constraintTop_toBottomOf="@id/tvProfilePicture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:alpha="0.6">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgUploadPhoto"
            android:background="@drawable/ic_image_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"/>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/uploadPhotoDone"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/tvProfilePicture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/WhiteBoldText"
        android:text="Upload Logo Card"
        app:layout_constraintTop_toBottomOf="@id/uploadPhotoDone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_marginTop="30dp"
        />

    <!-- Upload Image-->
    <RelativeLayout
        android:id="@+id/uploadPhotoLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_upload_image"
        app:layout_constraintTop_toBottomOf="@id/tvLogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:alpha="0.6">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgUploadPhotoLogo"
            android:background="@drawable/ic_image_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"/>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/uploadPhotoLogoDone"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/tvLogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNextPhoto"
        style="@style/WhiteDarkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_white"
        android:text="Next"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/uploadPhotoLogoDone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>