        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="10dp"
            style="@style/WhiteBoldCard"
            android:id="@+id/tvNameSquare"
