            android:layout_height="3dp"
            android:layout_toStartOf="@id/imgPhotoBubble"
            android:layout_below="@id/lineTitleBubble"
            android:background="@android:color/white"/>


        <TextView
            android:layout_toEndOf="@id/imgPhotoBubble"
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            style="@style/WhiteBoldCard"
            android:id="@+id/tvRegionBubble"
            android:layout_alignBottom="@id/lineRegionBubble"
            />

        <View
            android:id="@+id/lineRegionBubble"
            android:layout_marginTop="45dp"
            android:layout_width="90dp"
            android:layout_marginStart="15dp"
            android:layout_height="3dp"
            android:layout_toEndOf="@id/imgPhotoBubble"
            android:layout_below="@id/lineTitleBubble"
            android:background="@android:color/white"/>

        <TextView
            android:layout_toEndOf="@id/imgPhotoBubble"
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvNoteBubble"
            android:text="Name"
            style="@style/WhiteBoldCard"
            android:layout_alignBottom="@id/lineNoteBubble"
            />

        <View
            android:id="@+id/lineNoteBubble"
            android:layout_marginTop="45dp"
            android:layout_width="90dp"
            android:layout_marginStart="15dp"
            android:layout_height="3dp"
            android:layout_toEndOf="@id/imgPhotoBubble"
            android:layout_below="@id/lineRegionBubble"
            android:background="@android:color/white"/>


        <TextView
            android:layout_marginStart="15dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="22-07-2021"
            android:layout_marginTop="5dp"
            style="@style/WhiteBoldCard"
            android:id="@+id/tvExpDateBubble"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:layout_marginStart="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Nick"
            android:gravity="center"
            android:layout_marginTop="5dp"
            style="@style/WhiteBoldCard"
            android:id="@+id/tvNickBubble"
            android:layout_below="@id/imgPhotoBubble"
            />
    </RelativeLayout>

    <!-- Square -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameSquare"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/square"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="320dp"
            android:gravity="left"
            android:layout_toStartOf="@id/imgLogoSquareTwo"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"
            android:text="Friendship Application"
            style="@style/WhiteBoldText"
            android:id="@+id/tvTitleSquare"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="60dp"
